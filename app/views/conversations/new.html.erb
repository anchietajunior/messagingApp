<h1>New conversation</h1>

<%= form_tag conversations_path, method: :post do  %>
  <div class="form-group">
    <%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :first_name), class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= text_field_tag :subject, nil, placeholder: "Subject", class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= text_area_tag :body, nil, placeholder: "Body", class: "form-control"  %>
  </div>

  <%= submit_tag "Criar Conversa", class: "btn btn-default" %>
<% end %>
